<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/DEL_studenticon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/DEL_studentname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/DEL_studentname"
        android:id="@+id/DEL_studentnumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/DEL_studentname"
        android:layout_marginLeft="10dp"
        android:id="@+id/DEL_studentmajor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignStart="@id/DEL_studentmajor"
        android:layout_below="@id/DEL_studentmajor"
        android:id="@+id/DEL_studentsex"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认删除"
        android:id="@+id/DEL_complete"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/DEL_studenticon"
        />

</RelativeLayout>